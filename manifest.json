{
    "manifest_version": 3,
    "name": "ImmoNoise - Noise Pollution",
    "version": "1.0.3",
    "description": "Shows noise pollution levels for Berlin properties on ImmobilienScout24.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://gdi.berlin.de/*",
        "https://api-immonoise.martinaberastegue.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.immobilienscout24.de/expose/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png",
                "wave.gif"
            ],
            "matches": [
                "https://www.immobilienscout24.de/*"
            ]
        }
    ]
}